{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "2022 : Population vs GDP with CO2 Emissions",
    "width": 800,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/ZW123654/FIT3179_A2/ca7e1d8707338ecad3493d896fca047dae9c0e17/data/simplified-co2-data.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {
        "filter": "datum.year == 2022"
      },
      {
        "lookup": "country",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/ZW123654/FIT3179_A2/79bc2474e0757d4fa77bbba9a6d9330a3ab36b78/js/ne_110m_admin_0_countries.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
          },
          "key": "properties.NAME",
          "fields": ["properties.CONTINENT"]
        }
      }
    ],
    "params": [
      {
        "name": "continent_selection",
        "bind": {
          "input": "select",
          "options": [null, "Africa", "Asia", "Europe", "North America", "Oceania", "South America"],
          "labels": ["Show All", "Africa", "Asia", "Europe", "North America", "Oceania", "South America"],
          "name": "Continent Selection: "
        }
      }
    ],
    "layer": [
      {
        "mark": {
          "type": "circle",
          "opacity": 0.6
        },
        "transform": [
          {
            "filter": "continent_selection == null || datum['properties.CONTINENT'] == continent_selection"
          }
        ],
        "encoding": {
          "x": {
            "field": "gdp",
            "type": "quantitative",
            "title": "GDP"
          },
          "y": {
            "field": "population",
            "type": "quantitative",
            "title": "Population"
          },
          "size": {
            "field": "co2",
            "type": "quantitative",
            "title": "CO2 Emissions",
            "scale": {"range": [10, 2000]}
          },
          "color": {
            "field": "properties.CONTINENT",
            "type": "nominal",
            "title": "Continent"
          },
          "tooltip": [
            {"field": "country", "type": "nominal", "title": "Country"},
            {"field": "gdp", "type": "quantitative", "title": "GDP"},
            {"field": "population", "type": "quantitative", "title": "Population"},
            {"field": "co2", "type": "quantitative", "title": "CO2 Emissions"},
            {"field": "properties.CONTINENT", "type": "nominal", "title": "Continent"}
          ]
        }
      }
    ]
  }